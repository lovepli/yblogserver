<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xandone.yblog.mapper.EssayMapper">
    <resultMap id="BaseResultMap" type="com.xandone.yblog.pojo.EssayBean">
        <result column="art_id" property="artId" jdbcType="VARCHAR"/>
        <result column="art_user_id" property="artUserId" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="art_comment_count" property="artCommentCount" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="imglist" property="imglist" jdbcType="VARCHAR"/>
        <result column="post_time" property="postTime" jdbcType="TIMESTAMP"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="contentHtml" property="contentHtml" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="addEssay" parameterType="com.xandone.yblog.pojo.EssayBean">
        insert into y_essay
        (essay_id,
        essay_user_id,
        title,
        essay_comment_count,
        type,
        imglist,
        post_time,
        content,
        contentHtml
        ) values
        (#{essayId},
        #{essayUserId},
        #{title},
        #{essayCommentCount},
        #{type},
        #{imglist},
        #{postTime},
        #{content},
        #{contentHtml}
        )
    </insert>

    <!-- asc 按升序排列 (不用写，默认使用这个) desc 按降序排列 -->
    <select id="getEssayList" resultMap="BaseResultMap">
        select * from y_essay order by
        id desc
    </select>

    <select id="getEssayById" resultMap="BaseResultMap">
        select * from
        y_essay
        where essay_id = #{essayId}
    </select>

</mapper>